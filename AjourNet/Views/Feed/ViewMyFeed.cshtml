@using AjourNet.Domain.ViewModels
@model UserPostModel

@{
    Layout = null;
    UserPostModel post = ViewBag.PostModel;
}

<div>
    <div class="col-xs-3">
        <img src="~/Images/no-photo.jpg " class="img-thumbnail " id="slallProfileImage">
    </div>
    
    @using (Ajax.BeginForm("CreatePost", "Post", null, new AjaxOptions { HttpMethod = "Post", UpdateTargetId = "feedsView" }, new { @class = "form-horizontal", @id = "createPostForm" }))
    {
        @Html.AntiForgeryToken()
    <div class="col-xs-9" id="postText" name="text">
        @Html.TextAreaFor(model => model.Text, htmlAttributes: new { @class = "form-control", @placeholder = "Type your post here..." })
        <br>
        <div class="text-right">
            <button id="createPost" class=" btn btn-primary">Post</button>
        </div>
        <br>
        <br>
    </div>
    }
</div>

<div>
        @Html.Action("ViewMyPost", "Post", new { postModel = post })
  
</div>